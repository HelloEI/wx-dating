<!--个人中心-->
<import src="../template/template"></import>
<!--视屏-->
<!--<template is="video" data=""></template>-->
<view class="video-area">
  <view wx:if="{{show}}" class="video-cover-wrap">
    <image class="video-cover" src="{{videoCover}}"></image>
    <image catchtap="playVideo" class="video-play" src="{{videoPlay}}"></image>
  </view>
</view>
<!--用户信息-->
<view class="user-info">
  <!--头像-->
  <image catchtap="getUserInfo" class="user-avatar-url" src="{{userInfo.avatarUrl || '../../images/home.png'}}"></image>
  <view class="user-nick-name-wrap">
    <navigator hover-class="none" url="../userOrder/userOrder" class="order iconfont icon-dingdan">订单</navigator>
    <!--昵称-->
    <view class="user-nick-name iconfont {{userInfo.gender == 1 ? 'icon-nanxing':'icon-nvxing' }}">{{userInfo.nickName || '请登录'}}</view>
    <navigator hover-class="none" url="../message/message" class="message iconfont icon-xiaoxi">消息</navigator>
  </view>
  <!--相册-->
  <template is="photo" data="{{ userPhoto: userPhotos, open_type: open_types }}"></template>
  <!--<view>123</view>-->
  <!--用户操作-->
  <view class="operation">
    <block wx:for="{{ opertaion }}" wx:for-item="op" wx:key="unique">
      <navigator url="{{ op.url }}" class="op arrow iconfont {{ op.ico }}">{{op.title}}</navigator>
    </block>
  </view>
</view>
<!--视频弹窗形式-->
<view catchtap="videodel" wx:if="{{ !show }}" class="video-mask">
  <video objectFit="{{objectFit}}" bindended="playFinish"  autoplay="{{autoplay}}" controls="{{videoControls}}" class="user-video-two" src="{{videoSrc}}"></video>
</view>